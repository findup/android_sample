<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.swingingblue.apptest"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".MainMenuActivity"
                  android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="SensorTestActivity"
                  android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name="GeoTestActivity"
                  android:label="@string/geotest" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name="CameraView"
                  android:label="@string/cameratest" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name="CameraViewNetwork"
                  android:label="@string/cameratestnet" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
        </activity>
    <activity android:name="PicturePickerActivity"></activity>
    <activity android:name="MapViewActivity"></activity>
    
	<uses-library android:name="com.google.android.maps" />
</application>

<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

<uses-sdk android:targetSdkVersion="7" android:minSdkVersion="4"></uses-sdk>
<uses-permission android:name="android.permission.CAMERA"></uses-permission>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 